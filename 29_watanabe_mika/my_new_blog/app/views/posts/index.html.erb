
<div class="col-md-8">
  <div class="form-inline" style="margin-bottom:10px;">
   <%= search_form_for @q do |f| %>
     <div class="form-group">
       <%= f.search_field :title_or_body_cont, placeholder: "タイトルか本文を検索", class: "form-control" %>
     </div>
     <%= f.submit "検索", class: "btn btn-primary" %>
   <% end %>
 </div><!-- search end -->
 
  <% @posts.each do |post| %>
    <div class="article">
      <h2>タイトル：<%= post.title %></h2>
      <p>カテゴリ：<%= post.category %></p>
      <p>作成日：<%= post.created_at %></p>
      <p><%= truncate(post.body, length: 50) %></p>
      <p><%= link_to "続きを読む", post, class: "btn btn-default" %></p>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>

<div class="col-md-4">
    <div class="thumbnail">
   <img src="http://heaaart.com/heartadmin/wp-content/uploads/2015/04/49716-1.png">
    <div class="caption">
      <h3>著者名：八幡太郎</h3>
      <p>詳細：八幡平の太郎です。</p>
    </div>
  </div>
  <div class="list-group">
    <% @new_posts.each_with_index do |post, index| %>
    <% if index >= 5
         break
       end
    %>
    <%= link_to post.title, post, class: "list-group-item" %>
    <% end %>
  </div>
</div>
