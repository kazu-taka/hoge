<div class="col-md-12">
    <h1>ブログ記事投稿</h1>
    <%= form_for @post do |f| %>
    
    <div class="form-group">
     <%= f.label "タイトル" %>
     <%= f.text_field :title, class: "form-control" %>
    </div>
    
    <div class="form-group">
     <%= f.label "カテゴリ" %>
     <%= f.select_field :category "日々", "雑感", "未分類", class: "form-control" %>
    </div>
    
     <div class="form-group">
     <%= f.label "本文" %>
     <%= f.text_area :body, class: "form-control" %>
    </div>
    
    <%= f.submit '登録する', class: "btn btn-primary" %>
  <% end %>

    
</div>